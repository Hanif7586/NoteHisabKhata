<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:id="@+id/cardviewdatils"
    app:cardBackgroundColor="@color/white"
    app:cardMaxElevation="12dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content">



    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/viewID"
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/firstnormal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/normalN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="নাম:"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txtfname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:layout_marginLeft="10dp"
                android:textStyle="bold" />

        </LinearLayout>



        <TextView
            android:id="@+id/txtlname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/firstnormal"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/txtlloca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtlname"
            android:text="@string/app_name"
            android:visibility="gone"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtponnername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtlloca"
            android:text="@string/app_name"
            android:visibility="gone"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtponnerporiman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtponnername"
            android:text="@string/app_name"
            android:visibility="gone"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtadvancetkk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtponnerporiman"
            android:text="@string/app_name"
            android:visibility="gone"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_below="@+id/txtadvancetkk"
            android:id="@+id/lastnormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            >
        <TextView
            android:id="@+id/normalbaki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="বাকির পরিমাণ:"
            android:textStyle="bold" />

            <TextView
                android:layout_below="@id/txtadvancetkk"
                android:id="@+id/txtbakitkk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#FF1504"
                android:layout_marginLeft="10dp"
                android:textStyle="bold" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/txt_btn_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="30dp"
                    android:paddingRight="30dp"
                    android:src="@drawable/baseline_edit_24" />

                <ImageView
                    android:layout_alignParentEnd="true"
                    android:id="@+id/txt_btn_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_delete_24"
                    />



            </RelativeLayout>



</LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>